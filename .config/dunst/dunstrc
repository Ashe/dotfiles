[global]

;; Follow the mouse 
monitor = 0
follow = mouse

;; Set programs used by dunst
browser = /usr/bin/firefox -new-tab
dmenu = rofi -show drun

;; Mouse interactions
mouse_left_click = do_action
mouse_right_click = close_current
mouse_middle_click = close_all

;; Style
font = Noto Sans 11
format = "<b>%s</b> %p\n%b"
markup = full
geometry = "325x50-30+30"
frame_color = "#3B7C87"
separator_color = frame
separator_height = 10
frame_width = 2
corner_radius = 10
icon_position = right
max_icon_size = 80
indicate_hidden = yes
shrink = no
padding = 16
horizontal_padding = 24
line_height = 4
alignment = left
show_age_threshold = 60
word_wrap = yes
ignore_newline = no
stack_duplicates = false
hide_duplicate_count = yes

timeout = 8

;; Don't sort notifications
sort = no

;; Don't show if a notification has a url
show_indicators = yes

;; Remember previous notifications
sticky_history = yes
history_length = 20

;; Keep dunst running
always_run_script = true

;; If user is away, keep notifications on screen
idle_threshold = 120

[shortcuts]
history = ctrl+grave

[irc]
appname = "weechat"
format  = "%s: %b"
urgency = low

[urgency_critical]
frame_color = "#B7472A"
timeout = 0
