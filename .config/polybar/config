[colors]

background = #2f343f
background-alt = #4f545f
foreground = #d8dee8
foreground-alt = #787e68
accent = #81a1c1
alert = #ebcb8b


[bar/bar]

monitor = ${env:MONITOR:}
width = 100%
height = 18
fixed-center = true
background = #433B67
foreground = ${colors.foreground}
padding-left = 8
padding-right = 8
module-margin-left = 1
module-margin-right = 1
font-0 = TamzenForPowerline:size=13
font-1 = FontAwesome:pixelsize=8
;tray-position = right
;tray-padding = 2
;tray-background = ${colors.background}
wm-restack = bspwm
modules-left = menu-apps mpd bspwm
modules-center = xwindow 
modules-right = cpu memory temperature filesystem wlan backlight volume date


[module/menu-apps]
type = custom/menu

label-open = Apps
label-close = x
label-separator = "  |  "

; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/usr/bin/env sh -c $COMMAND"

menu-0-0 = Browsers
menu-0-0-exec = menu-open-1
menu-0-1 = Utilities
menu-0-1-exec = menu-open-2
menu-0-2 = Exit
menu-0-2-exec = menu-open-3

menu-1-0 = Chrome
menu-1-0-exec = google-chrome-stable &

menu-2-0 = Nautilus
menu-2-0-exec = nautilus &
menu-2-1 = Scrot
menu-2-1-exec = scrot &
menu-2-2 = CKB
menu-2-2-exec = ckb &

menu-3-0 = Reboot
menu-3-0-exec = reboot &
menu-3-1 = Shutdown
menu-3-1-exec = shutdown &


[module/bspwm]

type = internal/bspwm
label-focused = %name%
label-focused-background= ${colors.background-alt}
label-focused-padding = 3
label-occupied = %name%
label-occupied-padding = 3
label-occupied-foreground= ${colors.foreground}
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 3
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 3


[module/xwindow]

