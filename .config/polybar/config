[colors]

background = ${xrdb:polybar.background}
background-alt = ${xrdb:polybar.background-alt}
foreground = ${xrdb:polybar.foreground}
foreground-alt = ${xrdb:polybar.foreground-alt}
accent = ${xrdb:polybar.accent}
alert = ${xrdb:polybar.alert}


[bar/bar]

monitor = ${env:MONITOR:}
width = 100%
height = 18
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 8
padding-right = 8
module-margin-left = 1
module-margin-right = 1
font-0 = ${xrdb:polybar.font}
;tray-position = right
;tray-padding = 2
;tray-background = ${colors.background}
dpi-x = 0
dpi-y = 0
line-size = 2
line-color = ${colors.accent}
wm-restack = bspwm
modules-left = menu-apps updates-arch-combined mpd bspwm
modules-center = xwindow 
modules-right = cpu memory backlight volume date 

[module/menu-apps]
type = custom/menu

label-open = Apps
label-close = x
label-separator = "  |  "

; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/usr/bin/env sh -c $COMMAND"

menu-0-0 = Browsers
menu-0-0-exec = menu-open-1
menu-0-1 = Utilities
menu-0-1-exec = menu-open-2
menu-0-2 = Exit
menu-0-2-exec = menu-open-3

menu-1-0 = Firefox
menu-1-0-exec = firefox &
menu-1-1 = Chrome
menu-1-1-exec = google-chrome-stable &

menu-2-0 = Terminal
menu-2-0-exec = urxvt &
menu-2-1 = Thunar
menu-2-1-exec = thunar &
menu-2-2 = Screenshot
menu-2-2-exec = screenshot &
menu-2-3 = Peek
menu-2-3-exec = peek &

menu-3-0 = Reboot
menu-3-0-exec = reboot &
menu-3-1 = Shutdown
menu-3-1-exec = shutdown now &


[module/bspwm]

type = internal/bspwm
label-focused = %name%
label-focused-underline = ${colors.accent} 
label-focused-background= ${colors.background-alt}
label-focused-padding = 3
label-occupied = %name%
label-occupied-padding = 2
label-occupied-foreground= ${colors.foreground}
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2


[module/xwindow]

type = internal/xwindow
label = %title:0:50:...%


[module/mpd]

type = internal/mpd
host = 127.0.0.1
port = 6600
password = 


format-online = <toggle> <icon-prev>  <label-time>  <icon-next>  <label-song>
icon-prev = 
icon-next = 
icon-play = 
icon-pause = 
;icon-prev-foreground = ${colors.accent}
;icon-next-foreground = ${colors.accent}
icon-pause-foreground = ${colors.accent}
label-song = %title% - %artist%
label-song-maxlen = 35
label-song-ellipsis = true

; Only applies if <bar-progress> is used
bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─


[module/volume]

type = internal/pulseaudio
format-volume = <label-volume>
label-volume = " %percentage%"
label-volume-foreground = ${colors.accent}
format-muted-prefix = " "
format-muted-foreground = ${colors.accent}
label-muted = Muted
label-muted-foreground= ${colors.foreground-alt}


[module/date]

type = internal/date
interval = 30
label = " %date%   %time%"
date = %A %d %B
time = %I:%M %p  %Z
format-prefix = 
format-prefix-foreground = ${colors.accent}


[module/backlight]
type = internal/backlight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = intel_backlight

; Available tokens:
;   %percentage% (default)
label =  %percentage%%


[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU: %percentage%%


[module/memory]
type = internal/memory

; Seconds to sleep between updates
; Default: 1
interval = 3

; Available tags:
;   <label> (default)
;   <bar-used>
;   <bar-free>
;   <ramp-used>
;   <ramp-free>
format = <label>

; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
;   %percentage_swap_used%
;   %percentage_swap_free%
;   %mb_swap_total%
;   %mb_swap_free%
;   %mb_swap_used%
;   %gb_swap_total%
;   %gb_swap_free%
;   %gb_swap_used%

label = RAM: %percentage_used%%

; Only applies if <bar-used> is used
bar-used-indicator =
bar-used-width = 50
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444

; Only applies if <ramp-used> is used
ramp-used-0 = ▁
ramp-used-1 = ▂
ramp-used-2 = ▃
ramp-used-3 = ▄
ramp-used-4 = ▅
ramp-used-5 = ▆
ramp-used-6 = ▇
ramp-used-7 = █

; Only applies if <ramp-free> is used
ramp-free-0 = ▁
ramp-free-1 = ▂
ramp-free-2 = ▃
ramp-free-3 = ▄
ramp-free-4 = ▅
ramp-free-5 = ▆
ramp-free-6 = ▇
ramp-free-7 = █


[module/filesystem]
type = internal/fs

label-mounted = %mountpoint%: %percentage_used%%

; Mountpoints to display
mount-0 = /
mount-1 = /home

; Seconds to sleep between updates
; Default: 30
interval = 10

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing between entries
; Default: 2
spacing = 1

[module/updates-arch-combined]
type = custom/script
exec = ~/.scripts/polybar/updates-arch-combined.sh
interval = 60
